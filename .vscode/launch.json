{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [	
		{
			"name": "(Windows) Launch",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/out/win/demo/demo.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [
				{
					"name": "PATH",
					"value": "${workspaceFolder}/out/win/engine;${workspaceFolder}/deps/win-x86_64/bin"
				}
			],
			"console": "externalTerminal"
		},
		{
			"name": "(macOS) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/out/mac/demo/demo",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [
				{
					"name": "DYLD_LIBRARY_PATH",
					"value": "${workspaceFolder}/out/mac/engine:${workspaceFolder}/deps/mac-x86_64/bin"
				}
			],
			"externalConsole": false,
			"MIMode": "lldb"
		},
		{
			"name": "(Linux) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/out/linux/demo/demo",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [
				{
					"name": "LD_LIBRARY_PATH",
					"value": "${workspaceFolder}/out/linux/engine/:${workspaceFolder}/deps/linux-x86_64/bin"
				}
			],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		}
	]
}