{
	"files.associations": {
		"*.bfg": "python",
		"*.h": "c"
	},
	"cSpell.words": [
		"purpl",
		"RDXC"
	],
	"python.formatting.provider": "black",
	"files.eol": "\n",
	"editor.tabSize": 8,
	"editor.insertSpaces": false,
	"[python]": {
		"editor.wordBasedSuggestions": false,
		"editor.tabSize": 4,
	},
	"[yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 4,
		"editor.autoIndent": "keep",
		"editor.quickSuggestions": {
			"other": true,
			"comments": false,
			"strings": true
		}
	}
}
